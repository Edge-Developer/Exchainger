<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp"
    android:layout_marginRight="@dimen/cardview_horizontal_margin"
    android:layout_marginLeft="@dimen/cardview_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageButton
            android:id="@+id/transaction_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="@drawable/ic_info"/>-->

        <TextView
            android:id="@+id/transaction_type"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:text="Buying Payooner"/>

        <TextView
            android:id="@+id/transaction_price"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transaction_type"
            android:layout_margin="4dp"
            tools:text="N32,000"/>

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12/Oct/17"
            android:layout_alignBaseline="@+id/transaction_status"
            android:layout_alignBottom="@+id/transaction_status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/transaction_price"
            android:layout_marginTop="4dp"
            android:background="#fb8c00"
            android:padding="4dp"
            android:textColor="@android:color/white"
            tools:text="In Progress"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

